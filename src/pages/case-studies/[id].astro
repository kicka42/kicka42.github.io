---
import Layout from '../../layouts/Layout.astro';
import { caseStudies } from '../../case-studies-data.js';

export async function getStaticPaths() {
  return caseStudies.map((study) => ({
    params: { id: study.id }
  }));
}

const { id } = Astro.params;
const study = caseStudies.find(s => s.id === id);

if (!study) {
  return Astro.redirect('/case-studies');
}
---

<Layout title={`${study.title} - Case Study`}>
  <div class="case-study-detail">
    <header class="case-header">
      <a href="/case-studies" class="back-link">← Back to Case Studies</a>
      <div class="header-content">
        <div class="header-meta">
          <span class="industry">{study.industry}</span>
          <span class="year">{study.year}</span>
        </div>
        <h1>{study.title}</h1>
        <p class="case-studies-summary">{study.shortDescription}</p>
      </div>
    </header>

    <div class="metrics-overview">
      {study.keyMetrics.map(metric => (
        <div class="metric-card">
          <div class="metric-value">{metric.value}</div>
          <div class="metric-label">{metric.label}</div>
        </div>
      ))}
    </div>

    <main class="case-content">
      <section class="content-section">
        <h2>The Challenge</h2>
        <p>{study.challenge}</p>
      </section>

      <section class="content-section">
        <h2>Strategy</h2>
        <ul class="strategy-list">
          {study.strategy.map(item => (
            <li>{item}</li>
          ))}
        </ul>
      </section>

      {/* Video showcase for Alerabat case study */}
      {study.id === "alerabat" && (
        <section class="content-section video-section">
          <h2>Video Ads Created</h2>
          <p>Here's a showcase of the different video advertisements I created for the Alerabat campaign:</p>
          <div class="video-container">
            <video autoplay muted loop class="case-study-video">
              <source src="/case-studies/case-studies-alerabat-2.mp4" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          </div>
        </section>
      )}

      <section class="content-section">
        <h2>Execution</h2>
        <ul class="execution-list">
          {study.execution.map(item => (
            <li>{item}</li>
          ))}
        </ul>
      </section>

      {study.testimonial && (
        <section class="testimonial-section">
          <blockquote class="testimonial">
            <p>"{study.testimonial.quote}"</p>
            <cite>
              — {study.testimonial.author}
              {study.testimonial.company && `, ${study.testimonial.company}`}
            </cite>
          </blockquote>
        </section>
      )}
    </main>


  </div>
</Layout>

<style>
  .case-study-detail {
    max-width: var(--wrap-wide);
    margin: 0 auto;
  }

  .case-header {
    margin-bottom: 3rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    color: var(--flexoki-600);
    text-decoration: none;
    margin-bottom: 2rem;
    transition: color 0.2s ease;
  }

  .theme-dark .back-link {
    color: var(--flexoki-500);
  }

  .back-link:hover {
    color: var(--color-action);
  }

  .header-content {
    text-align: center;
  }

  .header-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .industry {
    background: var(--flexoki-50);
    color: var(--flexoki-700);
    padding: 0.25rem 0.75rem;
    border-radius: var(--border-radius);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .theme-dark .industry {
    background: var(--flexoki-900);
    color: var(--flexoki-300);
  }

  .year {
    color: var(--flexoki-600);
    font-size: 0.875rem;
  }

  .theme-dark .year {
    color: var(--flexoki-500);
  }

  .case-header h1 {
    margin: 0 0 1rem 0;
    font-size: 2.5rem;
    line-height: 1.2;
  }

  .case-studies-summary {
    line-height: var(--line-height);
    color: var(--flexoki-300);
    margin-bottom: 2rem;
  }

  .theme-dark .case-studies-summary {
    color: var(--flexoki-300);
  }

  .metrics-overview {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 4rem;
    border: 1px solid var(--color-ui-normal);
    padding: 1.5rem;
    border-radius: var(--border-radius);
    line-height: 1.3;
  }

  .metrics-overview:hover {
    border-color: var(--color-ui-hover);
  }

  .metric-card {
    text-align: center;
    padding: 1rem;
    border-radius: var(--border-radius);
  }

  .metric-value {
    display: block;
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--flexoki-blue-600);
    margin-bottom: 0.5rem;
  }

  .theme-dark .metric-value {
    color: var(--flexoki-blue-400);
  }

  .metric-label {
    display: block;
    font-size: 0.875rem;
    color: var(--flexoki-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .theme-dark .metric-label {
    color: var(--flexoki-500);
  }

  .case-content {
    max-width: var(--wrap-normal);
    margin: 0 auto;
  }

  .content-section {
    margin-bottom: 3rem;
  }

  .content-section h2 {
    margin-bottom: 1.5rem;
    color: var(--color-tx-normal);
  }

  .content-section p {
    color: var(--flexoki-600);
    line-height: 1.6;
  }

  .theme-dark .content-section p {
    color: var(--flexoki-300);
  }

  .strategy-list,
  .execution-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .strategy-list li,
  .execution-list li {
    position: relative;
    padding-left: 2rem;
    margin-bottom: 1rem;
    color: var(--flexoki-600);
    line-height: 1.6;
  }

  .theme-dark .strategy-list li,
  .theme-dark .execution-list li {
    color: var(--flexoki-300);
  }

  .strategy-list li::before,
  .execution-list li::before {
    content: "✓";
    position: absolute;
    left: 0;
    color: var(--flexoki-green-600);
    font-weight: 600;
  }

  .theme-dark .strategy-list li::before,
  .theme-dark .execution-list li::before {
    color: var(--flexoki-green-400);
  }

  .testimonial-section {
    margin: 4rem 0;
    text-align: center;
  }

  .testimonial {
    background: var(--flexoki-50);
    padding: 2rem;
    border-radius: var(--border-radius);
    border-left: 4px solid var(--flexoki-blue-600);
    margin: 0;
  }

  .theme-dark .testimonial {
    background: var(--flexoki-950);
    border-left-color: var(--flexoki-blue-400);
  }

  .testimonial p {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--color-tx-normal);
    margin: 0 0 1rem 0;
    font-style: italic;
  }

  .testimonial cite {
    font-style: normal;
    color: var(--flexoki-600);
    font-size: 0.875rem;
  }

  .theme-dark .testimonial cite {
    color: var(--flexoki-500);
  }

  /* Video section styles */
  .video-section {
    margin: 3rem 0;
  }

  .video-container {
    margin-top: 1.5rem;
    text-align: center;
  }

  .case-study-video {
    width: 100%;
    max-width: 800px;
    min-height: 400px;
    height: auto;
    border-radius: var(--border-radius);
    object-fit: contain;
  }



  @media (max-width: 768px) {
    .case-header h1 {
      font-size: 2rem;
    }

    .metrics-overview {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem;
      padding: 1rem;
    }

    .metric-card {
      padding: 0.75rem;
    }

    .metric-value {
      font-size: 2rem;
    }

    .case-study-video {
      min-height: 300px;
    }
  }
</style> 